{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "tool-code/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "tool-code/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "tool-code/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "tool-code/dist/index.html"
    }
  ]
}
